<div class="form-part list" style="height: 79%;">
    <div class="list-container" style="height: 30rem;">
        {{#each phones}}
            {{>record}}
        {{/each}}
    </div>
</div>
<div class="form-part edit">
    <div class="controls-wrapper">
        <label style="margin-right: 1%;">
            <input type="text" name="fullName" placeholder="Type full name here...">
        </label>
        <label style="margin-left: 1%;">
            <input type="text" name="phone" placeholder="Type cellphone number here...">
        </label>
    </div>
</div>
<div class="controls-wrapper">
    <div class="form-part control" style="margin-right: .25rem;">
        <button onclick="addNewRecord()">Ok</button>
    </div>
    <div class="form-part control" style="margin-left: .25rem;">
        <button onclick="{{goBack}}">Cancel</button>
    </div>
</div>
